                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="MyCart">
                        <span class="oi oi-envelope-closed" aria-hidden="true"></span> Cart  @(appState.cartCount.HasValue && appState.cartCount.Value != 0 ? $"({appState.cartCount.Value})" : "")
                    </NavLink>
